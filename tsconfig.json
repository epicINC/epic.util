{
    "compilerOptions": {
        "outDir": "./dist",
        "target": "es2017",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2017"],
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true,
        "importHelpers": true,
        "alwaysStrict": true,
        "pretty": true,
        //"noUnusedParameters": true,
        //"noUnusedLocals": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "formatCodeOptions": {
        "indentSize": 2,
        "tabSize": 2
    },
    "include": [
        "./src/**/*"
    ]
}